{{!< default}}
{{> header}}
<main class="main_grizmosis" role="main">
{{#post}}
<article class="article_grizmosis" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_grizmosis">
<time class="date_grizmosis" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
<h1 class="posttitle_grizmosis" itemprop="headline">{{title}}</h1>
</header>
<div class="postcontent_grizmosis" itemprop="articleBody">
{{content}}
</div>
{{#if tags}}
<div class="posttags_grizmosis">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
    <div class="sharepost_grizmosis">
    <h4 class="share_grizmosis">Share this post: &nbsp;</h4>
    <a class="share_grizmosis icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_grizmosis">Twitter</span></a>
    <a class="share_grizmosis icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_grizmosis">Facebook</span></a>
    <a class="share_grizmosis icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_grizmosis">Google+</span></a>
    </div>
        {{#if author}}
        <footer class="postfooter_grizmosis">
        <address itemscope itemtype="http://schema.org/Person">
        {{#if author.image}}
        <div class="authorimage_grizmosis"><img src="{{author.image}}" itemprop="image" /></div>
        {{/if}}
        <h4 class="authorname_grizmosis"><span itemprop="author">{{author.name}}</span></h4>
        {{#if author.website}}
        <div class="authorwebsite_grizmosis"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
        </address>
        <div class="authorbio_grizmosis">
        <p>{{author.bio}}</p>
        </div>
        </footer>
        {{/if}}
</article>
{{/post}}
{{#if pagination}}
<div class="pagination_grizmosis">
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}